<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01F8FF">
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:id="@+id/instsel_goBack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:layout_width="256dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/logo"
        android:id="@+id/logo"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:columnCount="5"
        android:rowCount="4">
        <ImageButton
            android:layout_width="286dp"
            android:layout_height="150dp"
            android:id="@+id/inst_Piano"
            android:scaleType="fitXY"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/instsel_piano"/>
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="1"
            android:visibility="invisible"/>
        <ImageButton
            android:layout_width="286dp"
            android:layout_height="150dp"
            android:id="@+id/inst_Violin"
            android:scaleType="fitXY"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/instsel_violin"/>
        <ImageButton
            android:layout_width="286dp"
            android:layout_height="150dp"
            android:id="@+id/inst_Harp"
            android:scaleType="fitXY"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@drawable/instsel_harp"/>
        <ImageButton
            android:layout_width="286dp"
            android:layout_height="150dp"
            android:id="@+id/inst_Drum"
            android:scaleType="fitXY"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@drawable/instsel_drum"/>

    </GridLayout>

</RelativeLayout>